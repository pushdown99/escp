<div class="container-fluid">
<div class="row">
  <div class="col-md-12 col-sm-12">
    <hr><br>
    <h5>Renter</h5>
    <div id="renter"></div>
  </div>
  <div class="col-md-12 col-sm-12">
    <hr><br>
    <h5>Recent Receipts</h5>
    <div id="receipts"></div>
  </div>
</div>
</div>

<script type="text/javascript">
jQuery(document).ready(function() {
  function getRenterTbl () {
    $.getJSON("/renter", function(data) {
      console.log(data);
      blocks = data;
      var info  = document.getElementById("renter");
      html = '<table id="renter-table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">';
      html += '<thead>';
      html += '<tr>';
      html += '<th>순번</th>';
      html += '<th>상호명</th>';
      html += '<th>대표</th>';
      html += '<th>사업자번호</th>';
      html += '<th>전화번호</th>';
      html += '<th>주소</th>';
      html += '<th>보고</th>';
      html += '<th>상태</th>';
      html += '</tr>';
      html += '</thead>';
      html += '<tbody>';
      $.each(data, function(i, t) {
        var diff  = moment().unix() - moment(t.ts).unix();
        html += '<tr>';
        html += '<td>' + t.id + '</td>';
        html += '<td>' + t.name + '</td>';
        html += '<td>' + t.owner + '</td>';
        html += '<td>' + t.register + '</td>';
        html += '<td>' + t.tel + '</td>';
        html += '<td>' + t.address + '</td>';
        html += '<td>' + moment(t.ts).format('MM/DD HH:mm:ss') + '</td>';
        if(diff < 7200) {
          html += '<td><div class="led-green"></div></td>';
        }
        else {
          html += '<td><div class="led-red"></div></td>';
        }
        html += '</tr>';
      });
      html += '</tbody>';
      html += '</table>';
      info.innerHTML = html;
  
      $('#renter-table').DataTable({
        "pagingType": "numbers", // "simple" option for 'Previous' and 'Next' buttons only
        "pageLength": 5
      });
    });
    setTimeout(getRenterTbl, 5000);
  }

  function getReceiptTbl () {
    $.getJSON("/receipts", function(data) {
      console.log(data);
      blocks = data;
      var info  = document.getElementById("receipts");
      html = '<table id="receipt-table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">';
      html += '<thead>';
      html += '<tr>';
      html += '<th>순번</th>';
      html += '<th>상호명</th>';
      html += '<th>사업자번호</th>';
      html += '<th>합계</th>';
      html += '<th>현금</th>';
      html += '<th>카드</th>';
      html += '<th>일시</th>';
      html += '<th>블록</th>';
      html += '<th>트랜잭션</th>';
      html += '<th>인덱스</th>';
      html += '<th>분산파일</th>';
      html += '</tr>';
      html += '</thead>';
      html += '<tbody>';
      $.each(data, function(i, t) {
        html += '<tr>';
        html += '<td>' + t.id + '</td>';
        html += '<td>' + t.name + '</td>';
        html += '<td>' + t.register + '</td>';
        html += '<td class="right">' + t.total.toLocaleString() + '</td>';
        html += '<td class="right">' + t.cash.toLocaleString() + '</td>';
        html += '<td class="right">' + t.card.toLocaleString() + '</td>';
        html += '<td>' + moment(t.ts).format('MM/DD HH:mm:ss') + '</td>';
        html += '<td><a href="/explorer/' + t.block + '">' + t.block + '</a></td>';
        html += '<td><a href="/explorer/' + t.block + '/' + t.transactionidx + '">' + t.transaction + '</a></td>';
        html += '<td><a href="/explorer/' + t.block + '/' + t.transactionidx + '">' + t.transactionidx + '</a></td>';
        html += '<td><a href="/ipfs/' + t.ipfs + '" target="_blank">' + t.ipfs + '</a></td>';
        html += '</tr>';
      });
      html += '</tbody>';
      html += '</table>';
      info.innerHTML = html;

      $('#receipt-table').DataTable({
        "pagingType": "numbers", // "simple" option for 'Previous' and 'Next' buttons only
        "order": [[ 0, "desc" ]],
        "pageLength": 25
      });
    });
    setTimeout(getReceiptTbl, 5000);
  }

  ///////////////////////////////////////////////////////////////

  getRenterTbl ();
  getReceiptTbl ();

});
</script>

</body>

</html>
